@model Pie

@{
    ViewData["Title"] = "Pie's details";
}

<h2>More details about pie</h2>

<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price.ToString("c") / @Model.Weight kg</h3>       
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>

        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-pieId="@Model.Id">Add to cart</a>
            </p>
        </div>

    </div>
</div>

<br/>

<h3>
    <a asp-controller="Pie" asp-action="List">All pies</a>
</h3>

